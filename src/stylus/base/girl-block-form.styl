.girl-block-form
  max-width 420px
  color #2473a3
  border 1px solid
  text-align center
  margin 40px 58px 0 0
  float right
  @media (max-width: 912px)
    margin 52px 0 0 0
  @media (max-width: 768px)
      margin 30px auto 0 auto
      float none

  &__title
    font-weight 400
    font-size 25px
    text-align center
    text-transform uppercase
    margin-top 33px
    display block


  &__phone
    margin 30px 0 0 0
    max-width 67%
    width 100%
    padding 15px 16px
    border 1px solid
    color #2473a3
    &:focus
      outline none

  &__call
    font-size 19px
    font-weight 400
    margin-top 25px

  &__desc
    color #2473a3
    font-size 18px
    max-width 80%
    margin 20px auto 45px auto

  &__link
    color #2473a3
    &:hover
      text-decoration none
