.main-form
  background: rgba(82,101,107,0.7)
  border: 1px solid #000;
  color: #fff;
  margin-top: 50px;
  padding: 20px 22px;
  float right
  max-width 350px

  &__title
    font-size 23px
    color #fcbf00
    font-weight 600
    padding-bottom 15px
    position relative
    text-transform uppercase
    text-align center

  &__will-call
    font-size: 15px;
    text-transform: uppercase;
    font-weight 600
    text-align center
    margin: 15px 0;
    color: #fcbf00

  &__phone
    width 100%
    max-width 220px
    margin 0 auto
    display block
    border none
    padding 10px 15px
    &:focus
      outline none

  &__button
    background-image: -moz-linear-gradient(-90deg,#fcbf00 25%,#fdd145 85%,#fee289 100%);
    background-image: -webkit-linear-gradient(-90deg,#fcbf00 25%,#fdd145 85%,#fee289 100%);
    background-image: -ms-linear-gradient(-90deg,#fcbf00 25%,#fdd145 85%,#fee289 100%);
    box-shadow: 0 1px 2px 0 rgba(0,0,0,.5);
    border: 0;
    color: #2b2a29;
    width: 100%;
    font-size: 18px;
    text-transform: uppercase;
    font-weight: 400;
    max-width: 250px;
    margin: 18px auto 10px auto;
    min-height: 45px;
    display: block;
    &:hover
      cursor pointer
      background-image: -moz-linear-gradient(-90deg, #2b2a29 25%, #3d3c3b 85%, #4f4e4d 100%);
      background-image: -webkit-linear-gradient(-90deg, #2b2a29 25%, #3d3c3b 85%, #4f4e4d 100%);
      background-image: -ms-linear-gradient(-90deg, #2b2a29 25%, #3d3c3b 85%, #4f4e4d 100%);
      box-shadow: 0 1px 2px 0 rgba(24, 23, 22, .35);
      color: #fff

  &__onion
    font-size: 12px;
    text-align: center;
    display: block;
    color: #fff
    margin-top: 10px;
    margin-bottom: 0;
    font-weight 300


  &__link
    color: #fff
    &:hover
      text-decoration none