.properties-form
  text-align center
  width 100%
  border 1px solid
  position absolute
  z-index 999
  background-color #fff
  -webkit-box-shadow 0px 0px 27px -1px rgba(79,158,204,0.39)
  -moz-box-shadow 0px 0px 27px -1px rgba(79,158,204,0.39)
  box-shadow 0px 0px 27px -1px rgba(79,158,204,0.39)

  &__title
    text-transform uppercase
    font-weight 500
    font-size 25px
    max-width 90%
    display block
    margin 30px auto 0 auto
    line-height 1.5em

  &__phone
    font-weight 300
    width 68%
    display block
    margin 24px auto 0 auto
    border 1px solid #2374a3
    background-color #fff
    padding 15px
    color #2374a3
    &:focus
      outline none

  &__call
    font-size 18px
    margin-top 24px

  &__desc
    font-weight 300
    font-size 18px
    max-width 75%
    display block
    margin 15px auto 35px auto

  &__link
    font-weight 300
    color #2374a3
    &:hover
      text-decoration none
