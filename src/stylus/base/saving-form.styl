.saving-form
  max-width 500px
  margin 0 auto
  color #232323
  padding 40px 0
  text-align center
  @media (max-width: 380px)
    padding 40px 15px

  &__title
    font-weight 500
    text-transform uppercase
    font-size 29px
    border-bottom 2px solid
    padding-bottom 13px
    @media (max-width: 874px)
      padding-top 25px
      font-size 25px
    @media (max-width: 380px)
      display block
      font-size 27px


  &__spec-desc
    font-weight 300
    text-transform uppercase
    margin 40px auto 0 auto
    max-width 350px
    font-size 21px
    line-height 1.4em
    @media (max-width: 380px)
      max-width 100%
      font-size 19px
      margin 30px auto 0 auto

  &__phone
    margin 30px auto 0 auto
    display block
    border 1px solid
    background none
    color #232323
    padding 15px
    max-width 286px
    width 100%
    @media (max-width: 380px)
      padding 15px 0px 15px 4px
      max-width 100%
    &:focus
      outline none

  &__call
    font-size 19px
    margin-top 22px

  &__desc
    max-width 310px
    margin 20px auto 0 auto
    font-size 18px

  &__link
    color #232323
    &:hover
      text-decoration none