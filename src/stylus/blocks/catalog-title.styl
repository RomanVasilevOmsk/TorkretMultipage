.catalog-title__title-desc
  @media (min-width: 875px) and (max-width: 1170px)
    max-width 820px
  @media (max-width: 874px)
    font-size 15px
    max-width 310px
    margin 30px auto 0 auto

.catalog-title__title-desc td
  @media (max-width: 874px)
    font-size 15px

.catalog-title
  background #fff

  &__wrapper
    max-width 1200px
    margin 0 auto

  &__title
    color #000
    text-align center
    font-family 'Source Sans Pro', sans-serif
    font-weight 400
    text-transform uppercase
    font-size 43px
    padding-top 36px

  &__title-desc
    color #000
    border solid #000
    font-weight 400
    border-width 0 3px
    border-collapse collapse
    vertical-align middle
    width 100%
    max-width 975px
    margin 20px auto 0 auto
    z-index 9
    *display inline /* для IE7-, чтоб ему( */
    *margin-right .25em /* туда же, чтоб пробелы не "съедал" */
    & td
      font-size 22px
      text-align center
      padding 15px 0
      line-height 1.9em
    & tr:before, & tr:after
      display table-cell
      content '\a0'
      width 1.25em
      border-bottom 3px solid #000
    & tr:first-child:before, & tr:first-child:after
      border-top 3px solid #000




