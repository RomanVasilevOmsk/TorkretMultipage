.certificates
  background-color #fff
  display inline-block
  width 100%
  padding-bottom 30px
  @media (max-width: 768px)
    margin-top 20px

  &__inner
    max-width 1200px
    margin 0 auto

  &__title
    text-align center
    font-family 'Source Sans Pro', sans-serif
    font-weight 600
    text-transform uppercase
    font-size 40px
    padding  40px 0
    color #232323
    @media (max-width: 512px)
      font-size 30px
      padding 30px 0

  &__title-bold
    font-weight 600

