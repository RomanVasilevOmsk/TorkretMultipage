.clients
  padding-bottom 50px
  border-bottom 5px solid #519ed1
  &__inner
    max-width 1200px
    margin 0 auto
    color #fff

  &__title
    padding 40px 0
    font-weight 300
    text-align center
    margin-bottom 40px
    text-transform uppercase
    font-size 32px
    background-color #519fd0
    @media (max-width: 768px)
      font-size 30px
      margin-bottom 30px

    @media (max-width: 768px)
      font-size 20px
      padding-top 20px
      margin-bottom 20px

  &__title-bold
    font-weight bold






