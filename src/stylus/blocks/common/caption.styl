.caption
  display none

  &__title
    font-size 24px
    @media (max-width: 510px)
      font-size 18px

  &__desc
    font-size 14px!important
    margin 10px 0!important
    display inline-block
    width 100%
    max-width 720px

  &__inner
    width 40%
    margin 10px auto 0 auto

  &__inner-title
    font-size 18px
    @media (max-width: 510px)
      font-size 14px

  &__inner-desc
    font-size 18px!important
    @media (max-width: 510px)
      font-size 14px!important
