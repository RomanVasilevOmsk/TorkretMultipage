.objects-galery
  width 100%
  max-width 1040px
  margin 15px auto 0 auto
  display flex
  flex-direction row
  flex-wrap: wrap
  justify-content space-around
  @media (max-width: 512px)
    margin 30px auto 0 auto


  &__overlay
    width 100%
    height 100%
    display block
    position absolute
    &:hover
      background-color rgba(252, 191, 0, 0.75)
      outline 2px solid rgba(255,255,255,0.8)
      outline-offset -25px
      &:after
        content "+"
        color #fff
        display: block
        width 20px
        position absolute
        margin -35px auto 0px auto
        top 50%
        left -20px
        right 0
        font-size 60px
        font-weight 300


  &__item-link
    display inline-block
    height auto
    width 23.33333%
    position relative
    z-index 99
    @media (max-width:986px)
      width 48%
      margin-top 10px
    @media (max-width: 512px)
      width 100%
      margin 0 0 25px 0

  &__image
    width 100%
    min-height 300px

  &__desc
    color #fff
    position absolute
    bottom 0
    text-align center
    left 0
    right 0
    max-height 60px
    display flex
    justify-content center
    flex-direction column
    height 100%
    background-color rgba(0, 0, 0, 0.61)