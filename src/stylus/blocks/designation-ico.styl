.designation-ico
  background-color #ececed
  min-height 200px
  @media (max-width: 860px)
    min-height 400px
  @media (max-width: 510px)
    min-height 650px

  &__wrapper
    max-width 1200px
    margin 0 auto
    text-align center

  &__type
    width 25%
    float left
    margin-bottom 40px
    @media (max-width: 860px)
      width 40%
    @media (max-width: 860px)
      display none
    &--disable
      display none
      @media (max-width: 860px)
        display block
      @media (max-width: 510px)
        width 100%
      @media (max-width: 375px)
        margin-bottom 0

  &__workability
    width 50%
    float left
    margin-bottom 40px
    @media (max-width: 860px)
      width 100%
    @media (max-width: 375px)
      margin-bottom 0


  &__depth
    width 25%
    float right
    margin-bottom 40px
    @media (max-width: 860px)
      width 60%
      float right
    @media (max-width: 510px)
      width 100%


  &__title
    color #000
    font-weight 400
    font-size 18px
    margin-top 30px


  &__img
    float none

  &__container
    width 100%
    padding 0
    margin 35px auto 0 auto
    &--1
      max-width 180px
    &--2
      max-width 450px
    &--3
      max-width 260px

      @media (min-width: 860px) and (max-width: 1195px)
        margin 13px auto 0 auto

    &--disable
      display none
      @media (max-width: 860px)
        display block
        width 100%

  &__item
    list-style none
    &--1
      width 50%
      float left
    &--2
      width 50%
      float right
    &--3
      width 16.6666666%
      float left
      @media (max-width: 375px)
        width 50%
        margin-bottom 10px
    &--4
      width 16.6666666%
      float left
      @media (max-width: 375px)
        width 50%
        margin-bottom 10px
    &--5
      width 16.6666666%
      float left
      @media (max-width: 375px)
        width 50%
    &--11
      width 16.6666666%
      float left
      @media (max-width: 375px)
        width 50%
        margin-bottom 10px
    &--6
      width 16.6666666%
      float left
      @media (max-width: 375px)
        width 50%
    &--7
      width 16.6666666%
      float left
      @media (max-width: 375px)
        width 50%
    &--8
      width 33.3333333%
      float left
    &--9
      width 33.3333333%
      float left
    &--10
      width 33.3333333%
      float left



