  &__content-wrapper
    position absolute
    line-height 1.4em
    font-size 18px
    width 50%
    &:before
      content ""
      display block
      float left
      width 52px
      height 52px
      position absolute
      z-index 10
      background-repeat no-repeat
      background-image url("data:../images/base64/employment-ico-compressor.png;base64,")
    @media (max-width: 768px)
      font-size 14px

  &__spec
    color #fff
    font-weight 300
    background-color #2473a3
    max-width 450px
    margin 0 auto 0 auto
    font-size 18px
    line-height 1.6em
    padding 9px 0
    -webkit-margin-before 1em
    -webkit-margin-after 1em
    position absolute
    left 0
    right 0
    z-index 10
