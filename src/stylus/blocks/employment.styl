.employment
  background-color #e9fafe
  color #3880ab
  padding-bottom 35px

  &__wrapper
    max-width 1200px
    margin 0 auto
    padding 64px 0 54px 0
    min-height 1240px
    position relative
    @media (max-width: 768px)
      min-height 1320px

  &__list
    width 100%
    list-style none
    padding 0
    text-align center
  &__item
    width 100%
    position relative
    &:before
      content ""
      background-color: #3880ab;
      bottom 0
      left 50%
      position absolute;
      top 0
      width 2px
      z-index 8
      height 1110px
      @media (max-width: 768px)
        height 1135px

  &__title
    max-width 412px
    margin 0 auto 0 auto
    background-color #e9fafe
    border 2px solid
    font-family 'Source Sans Pro', sans-serif
    font-weight 400
    text-transform uppercase
    font-size 40px
    padding 10px 0
    z-index 9
    position absolute
    left 0px
    right 0px
    &--1
      top 0
    &--2
      top 433px
      padding 5px 0
      max-width 210px
    &--3
      top 860px
      padding 5px 0
      max-width 350px
      font-size 37px
      @media (max-width: 768px)
        top 915px

