.features
  background-color #2c3039
  width 100%
  display inline-block
  padding-bottom 40px

  &__inner
    max-width 1200px
    margin 0 auto

  &__item
    width 33.33333%
    float left
    font-family: 'Roboto', sans-serif
    font-weight 300
    margin 40px 0 20px 0
    min-height 170px
    position relative
    @media (max-width: 768px)
      width 50%

    @media (max-width: 510px)
      width 100%
      margin 20px 0 16px

  &__title
    font-size 24px
    text-align left
    font-weight 300
    line-height 2em

    &:before
      content ""
      display inline-block
      float left
      width 48px
      height 48px
      margin 0 15px 0 12px

    &--destruction:before
      background-image: url("data:../images/base64/features-ico/destruction-ico.png.png;base64,")
      background-position 0 -12px

    &--objects:before
      background-image: url("data:../images/base64/features-ico/objects-ico.png.png;base64,")
      background-position 0 -2px

    &--price:before
      background-image: url("data:../images/base64/features-ico/price-ico.png.png;base64,")

    &--quality:before
      background-image: url("data:../images/base64/features-ico/quality-ico.png.png;base64,")

    &--availability:before
      background-image: url("data:../images/base64/features-ico/quality-ico.png.png;base64,")

    &--approach:before
      background-image: url("data:../images/base64/features-ico/quality-ico.png.png;base64,")

  &__title-block
      text-align center
      font-weight 300
      font-size 40px
      margin-top 40px
      @media (max-width: 315px)
        font-size 30px

  &__description
    font-size 18px
    clear both
    padding 5px 20px 0 15px
    max-height 85px
    overflow hidden

  &__link
    font-size 14px
    text-transform uppercase
    text-decoration underline
    color #ffc200
    text-align left
    display block
    margin 20px 0 0 70px
    position absolute
    bottom 0

    &:hover
      text-decoration none