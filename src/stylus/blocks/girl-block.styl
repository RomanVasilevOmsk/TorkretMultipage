.girl-block
  background-color #fff


  &__wrapper
    max-width 1200px
    margin 0 auto

  &__left
    width 50%
    float left
    @media (max-width: 768px)
      width 100%
      float none
      margin 0 auto

  &__right
    width 50%
    float right
    position relative
    min-height 460px
    height 100%
    @media (max-width: 768px)
      display none

  &__title
    text-align center
    font-family 'Source Sans Pro', sans-serif
    font-weight 400
    text-transform uppercase
    font-size 43px
    padding-top 36px
    color #519fd0
    @media (max-width: 768px)
      font-size 28px

  &__img
    position absolute
    bottom 0
    z-index 99

  &__line
    display none
    width 120px
    height 2px
    background-color #519ed1
    margin 50px auto 0 auto