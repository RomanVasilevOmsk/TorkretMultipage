.main-form-block
  background-color #f1f1f1
  color #2c3039
  font-family: "PT Sans", sans-serif;
  width 100%
  display inline-block
  padding 40px 0
  line-height 1.8em

  &__inner
    max-width 1200px
    margin 0 auto
    padding-left 10px

  &__block-inner
    max-width 85%


  &__left-block
    width 50%
    float left
    @media (max-width: 768px)
      width 100%

  &__title
    font-weight 300
    font-size 28px
    text-align left
    border-bottom 2px solid
    margin 15px auto

  &__desc
    font-size 20px
    margin-bottom 10px

  &__phone, &__mail
    color #2c3039
    text-decoration none
    font-weight bold

  &__right-block
    width 50%
    display: inline-block;
    @media (max-width: 768px)
      width 100%

