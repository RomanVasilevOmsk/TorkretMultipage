
@import url('https://fonts.googleapis.com/css?family=Open+Sans:400,600,700');

.main-screen
  width 100%
  position relative
  background url(../images/first-block_bg.jpg) no-repeat
  background-size cover
  //background-position-y -85px
  //margin-bottom -88px
  @media (max-width: 800px)
    background-position-x: -600px;
  &__price
    color #f5c007

  &__img
    width 100%
    max-width 220px
    max-height 452px
    float left
    @media (max-width: 800px)
      display none
  &__inner
    height 100%
    min-height 100vh
    max-width 850px
    width 100%
    margin 0 auto
    color #000
    @media (max-width: 800px)
      height 650px

    //background: -moz-radial-gradient(ellipse at center, rgba(0, 0, 0, 0) 0%,rgba(18, 24, 27, 0.05) 75%,rgba(40, 52, 59, 0.96) 100%) /* FF3.6-15 */
    //background: -webkit-radial-gradient(ellipse at center, rgba(0, 0, 0, 0) 0%,rgba(18, 24, 27, 0.05) 75%,rgba(40, 52, 59, 0.96) 100%) /* Chrome10-25,Safari5.1-6 */
    //background radial-gradient(ellipse at center, rgba(0,0,0,0) 0%, rgba(18,24,27,0.4) 45%, rgba(40,52,59,1) 100%)

  &__wrapper
    float right
    @media (min-width: 993px) and (max-width: 1200px)
      max-width 100%
    @media (min-width: 769px) and (max-width: 992px)
      padding-left 0
    @media (max-width: 768px)
      padding-left 0
    & br
      @media (max-width: 800px)
        display none


  &__subtitle
    font-size 45px
    line-height 1.2
    padding-top 65px
    text-align right
    color #fff
    font-family 'Open Sans', sans-serif
    font-weight 700
    text-shadow 0 0 0 rgba(24,23,22,.8)
    @media (max-width: 768px)
      text-align center
      font-size 30px

  &__small-sub
    font-weight 500
    font-size: 25px;
    color #52656b
    text-transform: uppercase;
    padding-top: 10px;
    line-height: 25px;
    text-align: right;
    @media (max-width: 768px)
      text-align center
      font-size 15px
    & .boldme
      font-weight 600

