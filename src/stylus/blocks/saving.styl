.saving
  background-color #fff
  color #000

  &__form
    width 100%
    clear both
    background-color #fcbf00

  &__counts-item:last-child
    @media (max-width: 874px)
      margin-bottom 40px

  &__wrapper
    margin 0 auto
    max-width 1200px

  &__title
    text-align center
    font-family 'Source Sans Pro', sans-serif
    font-weight 400
    text-transform uppercase
    font-size 43px
    padding-top 36px


  &__title-desc
    color #000
    border solid #000
    font-weight 400
    border-width 0 3px
    border-collapse collapse
    vertical-align middle
    width 100%
    max-width 795px
    margin 38px auto 0 auto
    z-index 9
    *display inline /* для IE7-, чтоб ему( */
    *margin-right .25em /* туда же, чтоб пробелы не "съедал" */
    & td
      font-size 22px
      text-align center
      padding 15px 0
      line-height 1.9em
    & tr:before, & tr:after
      display table-cell
      content '\a0'
      width 1.25em
      border-bottom 3px solid #000
    & tr:first-child:before, & tr:first-child:after
      border-top 3px solid #000

  &__counts-title
    color #2573a3
    font-size 20px
    max-width 150px
    margin 20px auto 0 auto
    display block

  &__counts-item
    width 20%
    float left
    text-align center
    margin 45px 0 60px 0
    @media (max-width: 874px)
      width 100%
      margin 30px auto 0 auto
    & img
      display block
      margin 0 auto





.saving__title-desc
  @media (min-width: 875px) and (max-width: 1170px)
    max-width 820px
  @media (max-width: 874px)
    font-size 15px
    max-width 310px
    margin 30px auto 0 auto

.saving__title-desc td
  @media (max-width: 874px)
    font-size 15px
