.table-block
  background-color #e9fafe
  color #3880ab
  @media (max-width: 960px)
    display none

  &__wrapper
    max-width 1200px
    margin 0 auto
    padding-bottom 55px


  &__title-img
    width 80%

  &__title
    text-align center
    font-family 'Source Sans Pro', sans-serif
    font-weight 400
    text-transform uppercase
    font-size 43px
    padding-top 36px
    color #3880ab
    margin 0

  &__table
    margin 42px auto 0 auto
    max-width 1200px
    width 100%
    border-collapse collapse
    border 1px solid #2473a3
    color #3880ab
    font-weight 400
    & td
      padding 6px 0
      text-align center
      border-bottom 1px solid #2473a3
      border-left 1px solid #2473a3
    & img
      //max-width 70%
      margin 0
    &-logo
      max-width 90%!important
      margin 0 auto
      float none


  &__td-v
    border-left none!important
    &--vertical
      display block
      transform: rotate(270deg)
      -moz-transform: rotate(270deg)
      -webkit-transform: rotate(270deg)
      -o-transform: rotate(270deg)
      margin 0 -48px

  &__td-v--2
      border-bottom none!important
  &__desc
    text-align center
    max-width 380px
    margin 0 auto
    padding 10px 0

  &__td-title
    text-align left!important
    padding-left 5px!important
    &--last
      padding 0px 110px 0px 5px!important

  &__td-img
    vertical-align initial
    font-size 12px
    padding 6px 6px