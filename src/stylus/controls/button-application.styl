.button-application
  font-weight 400
  padding .3em .8em
  font-size 100%
  line-height 1.5
  display block
  color #232323
  background-color #fcbf00
  text-decoration none
  outline none

  &--top
    position absolute
    right 2px
    display inline-block
    z-index 9
    top 15px
    padding 0.9em 3.5em
    text-transform uppercase
    font-size 15px
    letter-spacing -0.03em
    -webkit-transition-property background
    -webkit-transition-duration 0.5s
    -webkit-transition-timing-function ease
    &--footer
      top 70px
      @media (max-width: 800px)
        top 100px
    @media (max-width: 800px)
      right 0
      left 0
      margin 0 auto
      max-width 215px
      text-align center

  &--bottom
    max-width 325px
    font-size 23px
    text-align center
    padding 21px 53px
    display inline-block
    margin 18px 0 0 64px
    position inherit!important
    left 0
    -webkit-transition-property background
    -webkit-transition-duration 0.5s
    -webkit-transition-timing-function ease
    border 3px solid #519ed1
    &:hover
      cursor pointer
      background-color #232323
      color #232323!important
      border-color #519ed1
      -webkit-transition-property background
      -webkit-transition-duration 0.2s
      -webkit-transition-timing-function ease
    @media (max-width: 800px)
      margin 20px auto 0 auto
      display block
    @media (max-width: 480px)
      max-width 230px
      padding 17px 14px

  &:hover
    cursor pointer
    background-color #232323
    color #fff
    -webkit-transition-property background
    -webkit-transition-duration 0.2s
    -webkit-transition-timing-function ease


  &--arrow
    width 100%
    max-width 36px
    display inline-block
    float left
    margin 0 auto
    height 52px
    border none
    top 86%
    left 0
    right 0
    position absolute
    background-repeat no-repeat
    background-image url("data:../images/base64/arrow-button.png;base64,")
    &:hover
      background-color rgba(255, 255, 255, 1)
      border-radius 35px
      background-image url("data:../images/base64/arrow-button-active.png;base64,")

