.button-saving-form
  font-size 20px
  text-transform uppercase
  font-weight 400
  max-width 320px
  width 100%
  margin-top 25px
  padding 13px 0
  color #232323
  background none
  border 1px solid #232323
  -webkit-transition-property background
  -webkit-transition-duration 0.5s
  -webkit-transition-timing-function ease
  &:hover
    cursor pointer
    background #232323
    color #fff
    -webkit-transition-property background
    -webkit-transition-duration 0.3s
    -webkit-transition-timing-function ease
  &:focus
    outline none